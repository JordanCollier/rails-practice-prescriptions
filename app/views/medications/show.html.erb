<h1> <%= @medication.name %></h1>

<h3>Prescriptions</h3>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>Patient</th>
      <th>Dosage/Schedule</th>
      <th>Dates</th>
      <th>Prescribed By</th>
    </tr>
  </thead>
  <tbody>
    <% @prescriptions.each do |prescription| %>
    <tr>
      <td><%= prescription.patient.full_name %></td>
      <td><%= prescription.dosage + ' ' + prescription.schedule %></td>
      <td><%= prescription.starts_on.strftime('%m/%d/%Y').to_s + ' - ' + prescription.ends_on.strftime('%m/%d/%Y').to_s %></td>
      <td><%= prescription.user.name %></td>
    </tr>
    <% end %>
  </tbody>
</table>
